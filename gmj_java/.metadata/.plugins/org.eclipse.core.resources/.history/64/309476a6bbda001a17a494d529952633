<script type="text/javascript">
new Vue({
	el:"@left",
	data:{
		id:'',
		pwd:'',
		name:'',
		email:'',
		typei:'',
	},
	methods:{
		join:function(){
			axios.get('http://localhost:888/members',{params:{'id':this.id,'pwd':this.pwd}})
			.then(res=>{
				alert(res.status);
				alert(res.data.action);
				alert(res.data.result);
			})
		}
	}
});
