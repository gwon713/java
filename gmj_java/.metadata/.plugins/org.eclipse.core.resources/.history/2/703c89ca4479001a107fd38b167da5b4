package p0408;

import java.util.Scanner;

public class quiz1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		int sub[] = new int[5];
		
		System.out.print("이름 : ");
		String name = sc.nextLine();
		
		System.out.print("번호 : ");
		sub[0] = sc.nextInt();
		
		System.out.print("국어 : ");
		sub[1] = sc.nextInt();
		
		System.out.print("영어 : ");
		sub[2] = sc.nextInt();
		
		System.out.print("수학 : ");
		sub[3] = sc.nextInt();
		
		for(int i=1; i<4; i++){
			sub[4]+=sub[i];
		}

	}

}
